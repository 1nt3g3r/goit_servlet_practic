<!DOCTYPE web-app PUBLIC
        "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
        "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
    <display-name>Customer</display-name>

    <servlet>
        <servlet-name>CustomerController</servlet-name>
        <servlet-class>net.proselyte.customer.controller.CustomerController</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>add-customer-servlet</servlet-name>
        <servlet-class>net.proselyte.customer.controller.AddCustomerServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>list-customers-servlet</servlet-name>
        <servlet-class>net.proselyte.customer.controller.ListAllCustomersServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>delete-customer-servlet</servlet-name>
        <servlet-class>net.proselyte.customer.controller.DeleteCustomerServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>edit-customer-servlet</servlet-name>
        <servlet-class>net.proselyte.customer.controller.EditCustomerServlet</servlet-class>
    </servlet>

    <!-- Mappings -->
    <servlet-mapping>
        <servlet-name>CustomerController</servlet-name>
        <url-pattern>/customer</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>add-customer-servlet</servlet-name>
        <url-pattern>/add</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>list-customers-servlet</servlet-name>
        <url-pattern>/list</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>delete-customer-servlet</servlet-name>
        <url-pattern>/delete</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>edit-customer-servlet</servlet-name>
        <url-pattern>/edit</url-pattern>
    </servlet-mapping>
</web-app>
